# ===========================================
# HRMS_IWIZ Frontend Environment Configuration
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# API CONFIGURATION
# ===========================================
# Backend API URL
# For local development: http://localhost:5000/api
# For production: https://your-backend-domain.com/api
REACT_APP_API_URL=http://localhost:5000/api

# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
# Environment mode
REACT_APP_NODE_ENV=development

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Application name
REACT_APP_NAME=HRMS IWIZ

# Application version
REACT_APP_VERSION=1.0.0

# Application description
REACT_APP_DESCRIPTION=Human Resource Management System

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_PWA=false
REACT_APP_ENABLE_OFFLINE_MODE=false

# ===========================================
# UI CONFIGURATION
# ===========================================
# Default theme (light/dark)
REACT_APP_DEFAULT_THEME=light

# Enable dark mode
REACT_APP_ENABLE_DARK_MODE=true

# Default language
REACT_APP_DEFAULT_LANGUAGE=en

# ===========================================
# TIMEOUT CONFIGURATION
# ===========================================
# API request timeout in milliseconds
REACT_APP_API_TIMEOUT=30000

# Connection timeout in milliseconds
REACT_APP_CONNECTION_TIMEOUT=10000

# ===========================================
# CACHE CONFIGURATION
# ===========================================
# Enable data caching
REACT_APP_ENABLE_CACHE=true

# Cache duration in milliseconds (5 minutes)
REACT_APP_CACHE_DURATION=300000

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================
# Enable browser notifications
REACT_APP_ENABLE_NOTIFICATIONS=true

# Notification duration in milliseconds
REACT_APP_NOTIFICATION_DURATION=5000

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size in bytes (5MB)
REACT_APP_MAX_FILE_SIZE=5242880

# Allowed file types
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===========================================
# PAYROLL CONFIGURATION
# ===========================================
# Currency symbol
REACT_APP_CURRENCY_SYMBOL=$

# Currency code
REACT_APP_CURRENCY_CODE=USD

# Number of decimal places
REACT_APP_CURRENCY_DECIMALS=2

# ===========================================
# ATTENDANCE CONFIGURATION
# ===========================================
# Working hours per day
REACT_APP_WORKING_HOURS_PER_DAY=8

# Working days per week
REACT_APP_WORKING_DAYS_PER_WEEK=5

# ===========================================
# LEAVE CONFIGURATION
# ===========================================
# Default leave types
REACT_APP_DEFAULT_LEAVE_TYPES=Annual,Sick,Personal,Emergency

# Minimum leave request notice in days
REACT_APP_MIN_LEAVE_NOTICE_DAYS=1

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Session timeout in milliseconds (8 hours)
REACT_APP_SESSION_TIMEOUT=28800000

# Enable auto-logout on inactivity
REACT_APP_ENABLE_AUTO_LOGOUT=true

# Inactivity timeout in milliseconds (30 minutes)
REACT_APP_INACTIVITY_TIMEOUT=1800000

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Enable React DevTools
REACT_APP_ENABLE_DEVTOOLS=true

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# Enable error reporting
REACT_APP_ENABLE_ERROR_REPORTING=false

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================
# Google Analytics ID
REACT_APP_GA_TRACKING_ID=

# Sentry DSN for error tracking
REACT_APP_SENTRY_DSN=

# ===========================================
# BUILD CONFIGURATION
# ===========================================
# Build timestamp
REACT_APP_BUILD_TIMESTAMP=

# Build version
REACT_APP_BUILD_VERSION=

# Git commit hash
REACT_APP_GIT_COMMIT=
